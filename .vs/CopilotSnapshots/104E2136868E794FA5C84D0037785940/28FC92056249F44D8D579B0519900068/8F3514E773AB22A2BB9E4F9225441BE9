    <script>
        // Sidebar filter logic (basic UI sync, no filtering logic implemented)
        function updatePriceInput(val) {
            document.getElementById('maxPrice').value = val;
        }
        function updateRatingInput(val) {
            document.getElementById('maxRating').value = val;
        }
        function resetFilters() {
            document.getElementById('minPrice').value = 0;
            document.getElementById('maxPrice').value = 1000;
            document.getElementById('priceRange').value = 1000;
            document.getElementById('freeBreakfast').checked = false;
            document.getElementById('freeWifi').checked = false;
            document.getElementById('freeParking').checked = false;
            document.getElementById('minRating').value = 1;
            document.getElementById('maxRating').value = 5;
            document.getElementById('ratingRange').value = 5;
        }
        function applyFilters() {
            // Placeholder for filter logic
            alert('Filters applied! (Demo only)');
        }
    </script>
