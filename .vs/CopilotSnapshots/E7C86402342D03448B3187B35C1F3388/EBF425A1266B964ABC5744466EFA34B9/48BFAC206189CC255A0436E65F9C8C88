    <script>
        let guestCount = 2;

        function incrementGuests() {
            guestCount++;
            updateGuestDisplay();
        }

        function decrementGuests() {
            if (guestCount > 1) {
                guestCount--;
                updateGuestDisplay();
            }
        }

        function updateGuestDisplay() {
            const display = document.getElementById('guestCount');
            display.textContent = guestCount === 1 ? '1 adult' : `${guestCount} adults`;
        }
    </script>

